.brick.brick-large
  .item-panel.item-panel-large
    .panel-title
      - if item.link
        = link_to item.title, item.link
      - else
        = item.title
    .panel-text= item.media_type
    .panel-text= item.finished_on_to_s
    - if item.creator
      .panel-text
        - if  item.creator_link
          = link_to "Created by #{item.creator}", item.creator_link
        - else
          = "Created by #{item.creator}"
    .panel-text= link_to "Listed by #{item.user.name}", user_path(item.user)
    .panel-link
      = link_to 'View', item_path(item)
      - if policy(item).edit?
        |
        = link_to 'Edit', edit_item_path(item)