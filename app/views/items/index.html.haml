.page-header Items
-if @items
  - @items.each do |item|
    .item-panel
      .row
        .col-sm-2
          .panel-checkbox
            -if item.finished?
              = fa_icon "check-square-o"
            - else
              = fa_icon "square-o"
        .col-sm-8
          .panel-title
            - if item.link
              = link_to item.title, item.link
            - else
              = item.title
          .panel-text= item.media_type
          .panel-text= item.finished_on_to_s
          .panel-text
            - if  item.creator_link
              = link_to item.creator. item.creator_link
            - else
              = item.creator
          .panel-text= link_to "Posted by #{item.user.name}", user_path(item.user)
        .col-sm-1
          .panel-link= link_to 'View', item_path(item)
        .col-sm-1
          .panel-link= link_to 'Edit', edit_item_path(item)
-else
  .page-text= link_to 'Login to view your items!', "/auth/twitter"